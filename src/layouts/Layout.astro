---
import '../styles/global.css';
import { siteConfig } from '../config/config';

type Props = {
  title: string;
  lang: string;
  description?: string;
  bodyClass?: string;
  ogImage?: string;
  ogUrl?: string;
  noindex?: boolean;
  keywords?: string[];
};

const {
  title,
  lang,
  description,
  bodyClass,
  ogImage,
  ogUrl,
  noindex,
  keywords,
} = Astro.props as Props;

const siteUrl = ogUrl || Astro.url.href;
const siteOrigin = Astro.url.origin;
const canonicalUrl = siteUrl;
const imageUrl = ogImage
  ? ogImage.startsWith('http')
    ? ogImage
    : `${siteOrigin}${ogImage}`
  : `${siteOrigin}${siteConfig.ogImage}`;

// Generate alternate language URLs
const alternateUrls: Record<string, string> = {};
if (lang === 'fr') {
  alternateUrls['en'] =
    `${siteOrigin}/en${Astro.url.pathname === '/' ? '' : Astro.url.pathname}`;
} else {
  alternateUrls['fr'] =
    `${siteOrigin}${Astro.url.pathname.replace('/en', '') || '/'}`;
}

// Structured data for Organization
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: siteConfig.name,
  alternateName: siteConfig.alternateNames,
  url: siteConfig.url,
  email: siteConfig.email,
  description:
    description || siteConfig.tagline[lang as keyof typeof siteConfig.tagline],
  logo: `${siteOrigin}/favicon.svg`,
};

// WebSite structured data
const websiteStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: siteConfig.name,
  alternateName: siteConfig.alternateNames,
  url: siteConfig.url,
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* Primary Meta Tags */}
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {
      keywords && keywords.length > 0 && (
        <meta name="keywords" content={keywords.join(', ')} />
      )
    }
    <meta name="author" content={siteConfig.author.name} />
    <meta
      name="robots"
      content={noindex ? 'noindex, nofollow' : 'index, follow'}
    />
    <meta name="language" content={lang === 'fr' ? 'French' : 'English'} />

    {/* Canonical URL */}
    <link rel="canonical" href={canonicalUrl} />

    {/* Alternate Language Links (hreflang) */}
    {
      Object.entries(alternateUrls).map(([locale, url]) => (
        <link rel="alternate" hreflang={locale} href={url} />
      ))
    }
    <link rel="alternate" hreflang="x-default" href={siteConfig.url} />

    {/* Favicon */}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    {/* Open Graph / Facebook */}
    <meta property="og:type" content={siteConfig.ogType} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content={siteConfig.name} />
    <meta property="og:locale" content={lang === 'fr' ? 'fr_FR' : 'en_US'} />
    {
      Object.entries(alternateUrls).map(([locale]) => (
        <meta
          property="og:locale:alternate"
          content={locale === 'fr' ? 'fr_FR' : 'en_US'}
        />
      ))
    }

    {/* Twitter Card */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content={imageUrl} />
    <meta name="twitter:image:alt" content={title} />
    {
      /*
      'twitter' in siteConfig.social && siteConfig.social.twitter && (
        <meta name="twitter:site" content={siteConfig.social.twitter} />
      )
     */
    }

    {/* Additional meta tags */}
    <meta name="theme-color" content={siteConfig.themeColor} />
    <meta name="format-detection" content="telephone=no" />

    {/* Structured Data (JSON-LD) */}
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(websiteStructuredData)}
    />

    {/* Fonts */}
    <link
      rel="preconnect"
      href="https://api.fontshare.com"
      crossorigin="anonymous"
    />
    <link
      rel="preconnect"
      href="https://cdn.fontshare.com"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://api.fontshare.com/v2/css?f[]=hanken-grotesk@400,500,600,700,800&f[]=synonym@400,500,600,700&display=block"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Hanken+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body id="kime" class={bodyClass}>
    <script>
      const PREFERRED_LOCALE_KEY = 'kime-preferred-locale';
      type Locale = 'fr' | 'en';

      /**
       * Detects browser language and returns 'fr' or 'en'
       */
      function detectBrowserLanguage(): Locale {
        const browserLang =
          navigator.language ||
          (navigator as Navigator & { userLanguage?: string }).userLanguage;
        return browserLang?.startsWith('fr') ? 'fr' : 'en';
      }

      /**
       * Gets preferred locale from localStorage or null if not set
       */
      function getPreferredLocale(): Locale | null {
        if (typeof window === 'undefined') return null;
        const stored = localStorage.getItem(PREFERRED_LOCALE_KEY);
        return stored === 'fr' || stored === 'en' ? stored : null;
      }

      /**
       * Sets preferred locale in localStorage
       */
      function setPreferredLocale(locale: Locale) {
        if (typeof window === 'undefined') return;
        localStorage.setItem(PREFERRED_LOCALE_KEY, locale);
      }

      /**
       * Redirects user to the correct path based on language detection
       * @param {Object} options - Configuration object
       * @param {string} options.currentLocale - The current locale of the page ('fr' or 'en')
       * @param {Object} options.paths - Object with available paths for each locale
       * @param {string} options.paths.fr - Path for French locale
       * @param {string} options.paths.en - Path for English locale
       */
      function redirectIfNeeded<T extends Locale>({
        currentLocale,
        paths,
      }: {
        currentLocale: T;
        paths: { [key in Exclude<Locale, T>]: string };
      }) {
        if (typeof window === 'undefined') return;

        // Check preferred locale first
        const preferredLocale = getPreferredLocale();
        const targetLocale = preferredLocale || detectBrowserLanguage();

        // If current locale matches target locale, no redirect needed
        if (currentLocale === targetLocale) return;

        // Redirect to the correct path
        const targetPath = paths[targetLocale as Exclude<Locale, T>];
        if (targetPath) {
          window.location.href = targetPath;
        }
      }

      // Export functions to window for use in page components
      window.kimeLocale = {
        redirectIfNeeded,
        setPreferredLocale,
        getPreferredLocale,
        detectBrowserLanguage,
      };
    </script>
    <slot />
  </body>
</html>
