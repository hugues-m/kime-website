---
import '../styles/global.css';

type Props = {
  title: string;
  lang: string;
  description?: string;
  bodyClass?: string;
  ogImage?: string;
  ogUrl?: string;
};

const { title, lang, description, bodyClass, ogImage, ogUrl } =
  Astro.props as Props;

const siteUrl = ogUrl || Astro.url.href;
const siteOrigin = Astro.url.origin;
const imageUrl = ogImage
  ? ogImage.startsWith('http')
    ? ogImage
    : `${siteOrigin}${ogImage}`
  : `${siteOrigin}/og-image.png`;
const siteName = 'KIME';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {description && <meta name="description" content={description} />}
    <link
      rel="preconnect"
      href="https://api.fontshare.com"
      crossorigin="anonymous"
    />
    <link
      rel="preconnect"
      href="https://cdn.fontshare.com"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://api.fontshare.com/v2/css?f[]=hanken-grotesk@400,500,600,700,800&f[]=synonym@400,500,600,700&display=block"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Hanken+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>

    {/* Open Graph / Facebook */}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={lang === 'fr' ? 'fr_FR' : 'en_US'} />

    {/* Twitter */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content={imageUrl} />

    {/* Additional meta tags */}
    <meta name="theme-color" content="#00004d" />
  </head>
  <body id="kime" class={bodyClass}>
    <script>
      console.log('LAYOUT SCRIPT');
      const PREFERRED_LOCALE_KEY = 'kime-preferred-locale';
      type Locale = 'fr' | 'en';

      /**
       * Detects browser language and returns 'fr' or 'en'
       */
      function detectBrowserLanguage(): Locale {
        const browserLang =
          navigator.language ||
          (navigator as Navigator & { userLanguage?: string }).userLanguage;
        return browserLang?.startsWith('fr') ? 'fr' : 'en';
      }

      /**
       * Gets preferred locale from localStorage or null if not set
       */
      function getPreferredLocale(): Locale | null {
        if (typeof window === 'undefined') return null;
        const stored = localStorage.getItem(PREFERRED_LOCALE_KEY);
        return stored === 'fr' || stored === 'en' ? stored : null;
      }

      /**
       * Sets preferred locale in localStorage
       */
      function setPreferredLocale(locale: Locale) {
        if (typeof window === 'undefined') return;
        localStorage.setItem(PREFERRED_LOCALE_KEY, locale);
      }

      /**
       * Redirects user to the correct path based on language detection
       * @param {Object} options - Configuration object
       * @param {string} options.currentLocale - The current locale of the page ('fr' or 'en')
       * @param {Object} options.paths - Object with available paths for each locale
       * @param {string} options.paths.fr - Path for French locale
       * @param {string} options.paths.en - Path for English locale
       */
      function redirectIfNeeded<T extends Locale>({
        currentLocale,
        paths,
      }: {
        currentLocale: T;
        paths: { [key in Exclude<Locale, T>]: string };
      }) {
        if (typeof window === 'undefined') return;

        // Check preferred locale first
        const preferredLocale = getPreferredLocale();
        const targetLocale = preferredLocale || detectBrowserLanguage();

        console.log({
          preferredLocale,
          targetLocale,
          currentLocale,
          paths,
        });

        // If current locale matches target locale, no redirect needed
        if (currentLocale === targetLocale) return;

        // Redirect to the correct path
        const targetPath = paths[targetLocale as Exclude<Locale, T>];
        if (targetPath) {
          window.location.href = targetPath;
        }
      }

      // Export functions to window for use in page components
      window.kimeLocale = {
        redirectIfNeeded,
        setPreferredLocale,
        getPreferredLocale,
        detectBrowserLanguage,
      };
    </script>
    <slot />
  </body>
</html>
