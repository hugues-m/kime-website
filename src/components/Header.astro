---
import type { Translations } from '../i18n/fr';
type Props = { translations: Translations };
const { translations } = Astro.props as Props;
---

<header
  class="sticky top-0 z-50 bg-white  w-full"
>
  <div class="container mx-auto flex items-center justify-between px-4">
      <a href="#top" class="font-title font-bold px-4 py-6 text-base text-primary">
        {translations.site.title}
      </a>
    <nav class="flex items-center gap-12 cursor-pointer">
      <a
        href="#projects"
        class="text-base text-primary-light hover:text-accent transition-colors font-medium font-body whitespace-nowrap"
      >
        {translations.nav.projects}
      </a>
      <a
        href="#collective"
        class="text-base text-primary-light hover:text-accent transition-colors font-medium font-body whitespace-nowrap"
      >
        {translations.nav.collective}
      </a>
      <a
        href="#contact"
        class="text-base text-primary-light hover:text-accent transition-colors font-medium font-body whitespace-nowrap"
      >
        {translations.nav.contact}
      </a>
    </nav>
  </div>
</header>
